#include<stdio.h>
#include<conio.h>
int main(){
       int j,i,n,k;
       scanf("%d",&n);
       for(i=1; i<=n;i++)
       {
              
              for(j=i;j<=n;j++)
              {
             
              printf("%d", j);
              
              }
              for(k=n-i;k<n-1;k++)
              {
                     
                    printf("%d", n-k-1);  
              }
              
             
              printf("\n");
       }
        
      
       
       return 0;
}
