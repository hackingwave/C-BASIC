#include<stdio.h>
#include<conio.h>
int main(){
       int j,i,n,space;
       scanf("%d",&n);
       for(i=1; i<=n;i++)
       {
              for(space=1;space<=n-i;space++)
              {
                     printf(" ");
              }
             
              for(j=1;j<=i;j++)
              {
             
              printf("%c",'*');
              
       
              }
              
             
              printf("\n");
       }
        
        for(i=1; i<=n;i++)
        {
             for(space=1;space<=i;space++)
              {
                     printf(" ");
              }
               
       for(j=i;j>=i&& j<n;j++)
              {
             
             printf("%c",'*');
              
       
             }
              
             
              printf("\n");
       
        }
       
       return 0;
}
